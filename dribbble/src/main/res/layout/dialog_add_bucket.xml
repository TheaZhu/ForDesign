<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/normal_horizontal_padding"
    android:paddingRight="@dimen/normal_horizontal_padding"
    android:paddingTop="@dimen/normal_vertical_padding">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="64">

        <EditText
            android:id="@+id/et_bucket_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_bucket_name"
            android:inputType="textMultiLine"
            android:maxLength="64"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="160">

        <EditText
            android:id="@+id/et_bucket_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_bucket_description"
            android:inputType="textMultiLine"
            android:maxLength="160"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>
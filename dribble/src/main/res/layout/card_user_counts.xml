<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="com.thea.fordesign.bean.DribbbleUser"/>

        <variable
            name="actionHandler"
            type="com.thea.fordesign.user.detail.UserDetailContract.SubPresenter"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_designer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/normal_vertical_padding"
            android:paddingLeft="@dimen/normal_horizontal_margin"
            android:paddingRight="@dimen/normal_horizontal_margin"
            android:paddingTop="@dimen/normal_vertical_padding">

            <LinearLayout
                android:id="@+id/ll_shots_count"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_widthPercent="50%">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_like_inactive_24dp"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_horizontal_margin"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{user.shotsCount + &quot;  shots&quot;}"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_buckets_count"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignRight="@id/ll_shots_count"
                android:layout_below="@id/ll_shots_count"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_like_inactive_24dp"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_horizontal_margin"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{user.bucketsCount + &quot;  buckets&quot;}"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_projects_count"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignRight="@id/ll_shots_count"
                android:layout_below="@id/ll_buckets_count"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_like_inactive_24dp"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_horizontal_margin"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{user.projectsCount + &quot;  projects&quot;}"/>
            </LinearLayout>

            <View
                android:id="@+id/view_divider"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/ll_projects_count"
                android:layout_marginLeft="@dimen/normal_horizontal_margin"
                android:layout_marginRight="@dimen/normal_horizontal_margin"
                android:background="@color/grey_200"
                app:layout_heightPercent="100%"/>

            <LinearLayout
                android:id="@+id/ll_followers_count"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_toRightOf="@id/view_divider"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_like_inactive_24dp"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_horizontal_margin"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{user.followersCount + &quot;  followers&quot;}"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_followings_count"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignLeft="@id/ll_followers_count"
                android:layout_below="@id/ll_followers_count"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_like_inactive_24dp"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_horizontal_margin"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{user.followingsCount + &quot;  followings&quot;}"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_likes_count"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignLeft="@id/ll_followings_count"
                android:layout_below="@id/ll_followings_count"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_like_inactive_24dp"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_horizontal_margin"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{user.likesCount + &quot;  likes&quot;}"/>
            </LinearLayout>
        </android.support.percent.PercentRelativeLayout>
    </android.support.v7.widget.CardView>
</layout>
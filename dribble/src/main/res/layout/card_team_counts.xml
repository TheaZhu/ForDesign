<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="team"
            type="com.thea.fordesign.bean.DribbbleUser"/>

        <variable
            name="actionHandler"
            type="com.thea.fordesign.team.detail.TeamDetailContract.Presenter"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_designer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/normal_horizontal_margin"
            android:paddingRight="@dimen/normal_horizontal_margin">

            <LinearLayout
                android:id="@+id/ll_shots_count"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_widthPercent="50%"
                android:onClick="@{() -> actionHandler.openShots(team.shotsUrl)}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_shot_24dp"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_horizontal_margin"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{team.shotsCount + &quot;  shots&quot;}"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_likes_count"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignRight="@id/ll_shots_count"
                android:layout_below="@id/ll_shots_count"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:onClick="@{() -> actionHandler.openLikes(team.likesUrl)}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_likes_24dp"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_horizontal_margin"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{team.likesCount + &quot;  likes&quot;}"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_buckets_count"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignRight="@id/ll_shots_count"
                android:layout_below="@id/ll_likes_count"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:onClick="@{() -> actionHandler.openBuckets(team.bucketsUrl)}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_bucket_24dp"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_horizontal_margin"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{team.bucketsCount + &quot;  buckets&quot;}"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_projects_count"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignRight="@id/ll_shots_count"
                android:layout_below="@id/ll_buckets_count"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:onClick="@{() -> actionHandler.openProjects(team.id)}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@mipmap/ic_project_24dp"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_horizontal_margin"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{team.projectsCount + &quot;  projects&quot;}"/>
            </LinearLayout>

            <View
                android:id="@+id/view_divider"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/ll_projects_count"
                android:layout_marginLeft="@dimen/normal_horizontal_margin"
                android:layout_marginRight="@dimen/normal_horizontal_margin"
                android:background="@color/grey_400"
                app:layout_heightPercent="100%"/>

            <LinearLayout
                android:id="@+id/ll_followers_count"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_toRightOf="@id/view_divider"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:onClick="@{() -> actionHandler.openFollowers(team.followersUrl)}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_following_blue_24dp"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_horizontal_margin"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{team.followersCount + &quot;  followers&quot;}"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_followings_count"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignLeft="@id/ll_followers_count"
                android:layout_below="@id/ll_followers_count"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:onClick="@{() -> actionHandler.openFollowings(team.followingUrl)}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_follower_blue_24dp"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_horizontal_margin"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{team.followingsCount + &quot;  followings&quot;}"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_members_count"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignLeft="@id/ll_followings_count"
                android:layout_below="@id/ll_followings_count"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:onClick="@{() -> actionHandler.openMembers(team.membersUrl)}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_team_24dp"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_horizontal_margin"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{team.membersCount + &quot;  members&quot;}"/>
            </LinearLayout>

            <!--<LinearLayout
                android:id="@+id/ll_team_shots_count"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignLeft="@id/ll_followings_count"
                android:layout_below="@id/ll_members_count"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:onClick="@{() -> actionHandler.openTeamShots(team.teamShotsUrl)}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_team_24dp"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_horizontal_margin"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{team.teamShotsCount + &quot;  teams&quot;}"/>
            </LinearLayout>-->
        </android.support.percent.PercentRelativeLayout>
    </android.support.v7.widget.CardView>
</layout>